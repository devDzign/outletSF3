{% extends '::layout/layoutAdmin.html.twig' %}

{% block body %}
    <h1>Utilisateurs factures list</h1>

    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>Références</th>
            <th>Date</th>
            <th>Prix TTC</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% if user.commandes|length == 0 %}
            <tr>
                <td colspan="4">
                    <center>Ancunne facture actuellement.</center>
                </td>
            </tr>
        {% endif %}
        {% for facture in user.commandes %}
            <tr>
                <td>ref : {{ facture.reference }}</td>
                <td>{{ facture.date|date('d/m/Y') }}</td>
                <td>{{ facture.commande.prixTTC }} €</td>
                <td>
                    <a href="{{ path('facturesPDF', { 'id' : facture.id }) }}" target="_blank">
                        <span class="glyphicon glyphicon-refresh"></span>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}