{% extends '::layout/layoutAdmin.html.twig' %}

{% block body -%}
    <h1>Pages</h1>

    <table class="record_properties">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Titre</th>
            <td>{{ entity.titre }}</td>
        </tr>
        <tr>
            <th>Contenu</th>
            <td>{{ entity.contenu }}</td>
        </tr>
        </tbody>
    </table>

    <ul class="record_actions">

        <a href="{{ path('admin_pages_index') }}" class="btn btn-default">
                Back to the list
            </a>
        |
        <a href="{{ path('admin_pages_edit', { 'id': entity.id }) }}" class="btn btn-default">
                Edit
            </a>
        |
        <li>{{ form(delete_form) }}</li>
    </ul>
{% endblock %}