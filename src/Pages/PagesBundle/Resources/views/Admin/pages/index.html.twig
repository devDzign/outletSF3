{% extends '::layout/layoutAdmin.html.twig' %}

{% block body -%}
    <h1>Pages list</h1>

    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>Titre</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.titre }}</td>
                <td>
                    <a href="{{ path('admin_pages_show', { 'id': entity.id }) }}" class="btn btn-success">
                        <span class="glyphicon glyphicon-book"></span>
                    </a>
                    |
                    <a href="{{ path('admin_pages_edit', { 'id': entity.id }) }}" class="btn btn-primary">
                        <span class="glyphicon glyphicon-edit"></span>
                    </a>
                    {#|#}
                    {#<form action="{{ path('admin_pages_delete', { 'id': entity.id }) }}" method="POST" enctype="multipart/form-data">#}
                    {#<button type="submit" class="btn btn-danger">#}
                    {#<span class="glyphicon glyphicon-remove"></span>#}
                    {#</button>#}
                    {#</form>#}


                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>

        <a href="{{ path('admin_pages_new') }}" class="btn btn-block btn-primary">
            <i class="icon-plus"></i> Nouvelle page
            </a>

    </ul>
{% endblock %}