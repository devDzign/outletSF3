{% extends '::layout/layoutAdmin.html.twig' %}

{% block body -%}
    <h1>Pages list</h1>

    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>Titre</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in pages %}
            <tr>
                <td>{{ entity.titre }}</td>
                <td>
                    <a href="{{ path('admin_pages_show', { 'id': entity.id }) }}"><i class="icon-book"></i></a>
                    <a href="{{ path('admin_pages_edit', { 'id': entity.id }) }}"><i class="icon-edit"></i></a>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_pages_new') }}">
                nouvelle page
            </a>
        </li>
    </ul>
{% endblock %}