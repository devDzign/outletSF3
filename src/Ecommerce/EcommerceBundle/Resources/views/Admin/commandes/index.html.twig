{% extends '::layout/layoutAdmin.html.twig' %}

{% block body -%}
    <h1>Commandes list</h1>

    <table class="table table-striped table-hover">
        <thead>
        <tr>

            <th>Nom client</th>
            <th>reference</th>
            <th>valider</th>
            <th>date</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in commandes %}
            <tr>
                <td>{{ entity.utilisateur.username }}</td>
                <td>{{ entity.reference }}</td>
                <td>{{ entity.valider }}</td>
                <td>{{ entity.date | date('d-m-Y h:i:s') }}</td>

                <td>
                    <a href="{{ path('admin_commandes_show', { 'id': entity.id }) }}" class="btn btn-success"
                       target="_blank">
                        <span class="glyphicon glyphicon-book"></span>
                    </a>

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>

        <a href="{{ path('admin_categories_new') }}" class="btn btn-block btn-primary">
            <i class="icon-plus"></i> Nouvelle page
        </a>

    </ul>
{% endblock %}
