{% extends 'layout/layoutAdmin.html.twig' %}

{% block body %}
    <h1>Produit edit</h1>


    <form action="{{ path('admin_categories_edit', {'id': category.id}) }}" method="POST" enctype="multipart/form-data">

        <div class="form-group">
            {{ form_label(form_edit.nom) }}
            {{ form_errors(form_edit.nom) }}
            {{ form_widget(form_edit.nom,{'attr': {'class': 'form-control'}}) }}
        </div>


        <div class="well">
            <div class="form-group">
                {{ form_label(form_edit.image.file) }}
                {{ form_errors(form_edit.image.file) }}
                {{ form_widget(form_edit.image.file,{'attr': {'class': 'form-control'}}) }}

            </div>
            <div class="form-group">
                {{ form_label(form_edit.image.alt) }}
                {{ form_errors(form_edit.image.alt) }}
                {{ form_widget(form_edit.image.alt,{'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="span5">
                <img src="{{ asset(category.image.getAssetPath()) }}" alt="{{ category.image.alt }}" width="470"
                     height="310">
            </div>
        </div>

        <button type="submit" class="btn btn-default">Submit</button>
        <a href="{{ path('admin_categories_index') }}" class="btn btn-info">
            Back to the list
        </a>
        {{ form_rest(form_edit) }}
    </form>

{% endblock %}

