{% extends '::layout/layoutAdmin.html.twig' %}

{% block body %}
    <h1>Produits</h1>

    <table class="record_properties">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Nom</th>
            <td>{{ entity.nom }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ entity.description }}</td>
        </tr>
        <tr>
            <th>Prix</th>
            <td>{{ entity.prix }}</td>
        </tr>
        <tr>
            <th>Disponible</th>
            <td>{{ entity.disponible }}</td>
        </tr>
        </tbody>
    </table>

    <ul class="record_actions">

        <a href="{{ path('admin_produits_index') }}" class="btn btn-primary">
            Back to the list
        </a>
        |
        <a href="{{ path('admin_produits_edit', { 'id': entity.id }) }}" class="btn btn-success">
            Edit
        </a>

        <div>
            {#avoir le formulaire de suppression#}
            {{ form(delete_form) }}
        </div>
    </ul>
{% endblock %}
