{% extends '::layout/layoutAdmin.html.twig' %}

{% block body -%}
    <h1>Produits list</h1>

    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>Nom</th>
            <th>Prix</th>
            <th>Disponible</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in produits %}
            <tr>
                <td>{{ entity.nom }}</td>
                <td>{{ entity.prix }}</td>
                <td>{{ entity.disponible }}</td>
                <td>
                    <a href="{{ path('admin_produits_show', { 'id': entity.id }) }}" class="btn btn-success">
                        <span class="glyphicon glyphicon-book"></span>
                    </a>
                    |
                    <a href="{{ path('admin_produits_edit', { 'id': entity.id }) }}" class="btn btn-primary">
                        <span class="glyphicon glyphicon-edit"></span>
                    </a>
                    |
                    <a href="{{ path('admin_produits_delete', { 'id': entity.id }) }}" class="btn btn-danger">
                        <span class="glyphicon glyphicon-remove"></span>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>

        <a href="{{ path('admin_produits_new') }}" class="btn btn-block btn-primary">
            <i class="icon-plus"></i> Nouveau Produit
        </a>

    </ul>

{% endblock %}
